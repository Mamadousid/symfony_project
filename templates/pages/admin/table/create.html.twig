{% extends 'themes/base_admin.html.twig' %}

{% block title %}Nouvelle table{% endblock %}

{% block description %}Nouvelle table{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Nouvelle table</h1>

    <div class="container mt-5">
        <div class="row">
             <div class="col-md-6 mx-auto">
                   {{form_start(form)}}
                        <div class="mb-3">
                            <label for="formule_form_number">Numéro</label>
                            <div class="text-danger">{{ form_errors(form.number) }}</div>
                            {{ form_widget(form.number, {"attr": {"class":"form-control", "autofocus":"autofocus"}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="formule_form_places">Places</label>
                            <div class="text-danger">{{ form_errors(form.places) }}</div>
                            {{ form_widget(form.places, {"attr": {"class":"form-control", "autofocus":"autofocus"}}) }}
                        </div>
                        <div>
                            <input formnovalidate type="submit" class="btn btn-primary shadow" value="Créer">
                        </div>
                   {{form_end(form)}}
             </div>
        </div>
    </div>

{% endblock %}
{% extends 'themes/base_visitor.html.twig' %}

{% block block_name %}Contact{% endblock %}

{% block description %}Contactez-moi{% endblock %}

{% block main %}
     <main>
          <div>
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5248.903324318287!2d2.3023562119637795!3d48.868665771214104!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fc36c62670b%3A0xbf23afbccb3b7c8e!2sLe%20Confidentiel!5e0!3m2!1sfr!2sfr!4v1722419057272!5m2!1sfr!2sfr" width="100%" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>

          <div class="container">
              <div class="row">
                    
                  <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
                     <div class="text-center text-md-center jd-contact-center">

                       <h2 class="block-title my-5">Contactez-moi</h2>
                      <p>Restaurant Toque'Or</p>

                      <p><i class="fa-solid fa-envelope"></i> : {{setting.email}}</p>
                      {% if setting.phone is not empty %}
                         <p><i class="fa-solid fa-phone"></i> : {{setting.phone}}</i></p>
                      {% endif %}
                     </div>
                 </div>

                  <div class="my-5 col-md-6">
                            {% include 'components/alert.html.twig' %}
                      {{ form_start(form) }}
                          <div class="row">
                           <div class="col-md-6 mb-3">
                                <label for="contact_form_firstName">Prénom <span class="text-danger">*</span></label>
                                <div class="text-danger">{{ form_errors(form.firstName) }}</div>
                                {{ form_widget(form.firstName, {'attr':{'class':'form-control', 'autofocus': 'autofocus'}}) }}
                           </div>
                           <div class="col-md-6 mb-3">
                                <label for="contact_form_lastName">Nom <span class="text-danger">*</span></label>
                                <div class="text-danger">{{ form_errors(form.lastName) }}</div>
                                {{ form_widget(form.lastName, {'attr':{'class':'form-control'}}) }}
                           </div>
                          </div> 

                           <div class="row">
                           <div class="col-md-6 mb-3">
                                <label for="contact_form_email">Email <span class="text-danger">*</span></label>
                                <div class="text-danger">{{ form_errors(form.email) }}</div>
                                {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
                           </div>
                           <div class="col-md-6 mb-3">
                                <label for="contact_form_phone">Téléphone</label>
                                <div class="text-danger">{{ form_errors(form.phone) }}</div>
                                {{ form_widget(form.phone, {'attr':{'class':'form-control'}}) }}
                           </div>
                          </div> 

                           <div class="mb-3">
                                <label for="contact_form_message">Message <span class="text-danger">*</span></label>
                                <div class="text-danger">{{ form_errors(form.message) }}</div>
                                {{ form_widget(form.message, {'attr':{'class':'form-control', 'rows':'6'}}) }}
                           </div>

                           <div>
                               <input formnovalidate type="submit" class="btn btn-warning shadow">
                           </div>

                      {{ form_end(form) }}
                  </div>
              </div>
          </div>
     </main>
{% endblock %}